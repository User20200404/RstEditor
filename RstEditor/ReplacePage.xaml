<Page
    x:Class="RstEditor.ReplacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RstEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="thisPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="textBlock_Source" Text="原始文本 - 找到 0 个项目中的 0 个" />
            <TextBox Text="{Binding ElementName=thisPage, Path=OriginalText, Mode=TwoWay}" />
            <TextBlock />
            <TextBlock Text="替换为" />
            <TextBox Text="{Binding ElementName=thisPage, Path=ReplaceWith, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</Page>
